 #include <kipr/botball.h>
const int sp=50;
int turn=0;
int error=0;
int offset=(3900+2100)/2;
float t,kp=5.0/90.0;//(max-min)/(max-min)
int dh;
void goline()//Ѱ�� 
{
	error=dh-offset;
  	turn=kp*error;
  	printf("%f\n",kp);
  	motor(0,sp-turn);
  	motor(1,sp+turn);
}
void chushihua()
{
	enable_servos(); 
	set_servo_position(0,1100);
	set_servo_position(1,1200);
}
void shangpo()//���³��� 
{
	t=seconds()+3;
  	while(seconds()<t)
    {
  		motor(0,70);
  		motor(1,70);
    }
  	dh=analog(0);
  	t+=10;
  	while (seconds()<t)
    {
      	printf("%d\n",dh);
    	dh=analog(0);
      	goline();
    }
} 
void shouqiu()
{
	set_servo_position(0,500);//��������ʱץ�ֵ�λ�ã���ʱ��С���������� 
	t+=1;
  	while (seconds()<t)//��ʽ�ϵ����� 
    {
    	motor(0,sp);
      	motor(1,sp);
    }
//   set_servo_position(0,);
//	set_servo_position(1,);//�ٴθ���
	t+=;
  	while (seconds()<t)//ǰ����ͷ 
    {
    	dh=analog(0);
      	goline();
    }
    motor(0,0);
    t+=3;
    int i=1200;
    while (seconds()<t)//һ�ߺ���һ�߼��� 
    {
    	motor(0,-10);
		motor(1,-10);
		while (i>530)
		{
			i-=10;
			set_servo_position(0,i);
			msleep(10);
		} 
	}
 	motor(0,0);
 	motor(1,0);
	i=500;
	while (i<2000)//����
	{
		i+=10;
		set_servo_position(0,i);
		msleep(10);
	}
	motor(0,sp);//ǰ�� 
	motor(1,sp);
	msleep();
	set_servo_position(0,1800);//�ٵ��� �½� ���� 
	set_servo_position(1,1000);
	
}
int main()
{
	while (analog(1)<=1000)
	{ 
		chushihua();
		shangpo();
		shouqiu();
		break;
   	}
   	return 0;
}
